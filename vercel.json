{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.ts", "use": "@vercel/static-build", "config": {} },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "client/dist/public/index.html" }
  ]
}
